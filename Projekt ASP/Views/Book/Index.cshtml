@model Projekt_ASP.Models.BookViewModel
@{
    ViewData["Title"] = "Biblioteczka";
}

    <div class="container">
        <div class="table-responsive">
            <h1>@ViewData["Title"]:</h1>
            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Tytuł</th>
                        <th>Autor</th>
                        <th style="width: 360px;">Opis</th>
                        <th>Obrazek</th>
                        <th colspan="2">Rok wydania(dd-mm-yyyy)</th>

                    </tr>
                    @using (var form = Html.BeginForm("CreateUpdate", "Book", FormMethod.Post))
                        {
                            <tr>
                                <th>
                                    @Html.HiddenFor(model => model.EditableItem.Id)
                                    <div class="input-group">
                                        @Html.TextBoxFor(model => model.EditableItem.Title, new { @class = "form-control" })
                                    </div>
                                </th>
                                <th>
                                    <div class="input-group">
                                        @Html.TextBoxFor(model => model.EditableItem.Author, new { @class = "form-control" })
                                    </div>
                                </th>
                                <th>
                                    <div class="input-group">
                                        @Html.TextBoxFor(model => model.EditableItem.Description, new { @class = "form-control" })
                                    </div>
                                </th>
                                <th>
                                    <div class="input-group">
                                        @Html.TextBoxFor(model => model.EditableItem.ImagePath, new { @class = "form-control", @type = "file" })
                                    </div>
                                </th>
                                <th>
                                    <div class="input-group">
                                        @Html.TextBoxFor(model => model.EditableItem.ReleaseDate, "{0:01-01-yyyy}", new { @class = "form-control" })
                                    </div>
                                </th>
                                <th>
                                    <div class="input-group-append">
                                        <button type="submit" class="btn btn-success">@(Model.EditableItem.Id > 0 ? "Update" : "Add")</button>
                                    </div>
                                </th>
                                @Html.ValidationSummary()
                            </tr>
                         }
                </thead>
                <tbody>
                    @foreach (var item in Model.Bookshelf)
                    {
                    <tr>
                        <td>
                            <input type="checkbox" checked="@item.IsRead" onclick="window.location.href = '/Book/ToggleIsRead/@item.Id';" />
                            <a href="/Book/Edit/@item.Id">
                                @item.Title
                            </a>
                        </td>
                        <td class="text-right">
                            @item.Author.ToString()
                        </td>
                        <td class="text-right">
                            @item.Description.ToString()
                        </td>
                        <td class="text-right">
                            <img src="images/@item.ImagePath.ToString()" style="width:80px;">
                        </td>
                        <td class="text-right">
                            @item.ReleaseDate.ToString("yyyy")
                        </td>
                        <td class="text-center">
                            <a href="/Book/Delete/@item.Id" onclick="return confirm('Are you sure?');" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
